{
  "manifest_version": 3,
  "name": "CPE Distancia Puertas",
  "description": "Calcula distancia por censo entre chapa usuario y puertas LAB/FES/NOC/NOC-FES en el chapero.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://portal.cpevalencia.com/*"
  ],
  "action": {
    "default_title": "CPE Distancia Puertas",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/CPEV.png",
      "32": "icons/CPEV.png",
      "48": "icons/CPEV.png",
      "128": "icons/CPEV.png"
    }
  },
  "icons": {
    "16": "icons/CPEV.png",
    "32": "icons/CPEV.png",
    "48": "icons/CPEV.png",
    "128": "icons/CPEV.png"
  }
}
